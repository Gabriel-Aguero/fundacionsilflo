---
import ArrowRight from "./icons/ArrowRight.astro";
export interface Props {
  category: string;
  title: string;
  description: string;
  images: string;
}

const { category, title, description, images } = Astro.props;
---

<div
  class="cursor-pointer p-3 w-full md:w-2/5 lg:w-1/4 sm:mb-0 mb-6 border-gray-400 border shadow-xl shadow-gray-500
   transition duration-500 ease-in-out transform
   overflow-clip sm:rounded-xl sm:group-hover:-translate-y-1
   sm:group-hover:shadow-2xl sm:hover:border-gray-700
   lg:hover:bg-gray-300/50
   sm:h-full hover:md:scale-110 md:group-hover:scale-105"
>
  <div class="rounded-lg h-64 overflow-hidden relative">
    <img
      alt="content"
      class="object-cover object-top w-full h-56 transition duration-500 sm:h-full hover:md:scale-125 md:group-hover:scale-105"
      loading="lazy"
      src={images}
    />
  </div>
  <h2 class="text-xl font-medium title-font text-gray-900 mt-5">
    {title}
  </h2>
  <p class="text-base text-gray-900 leading-relaxed mt-5">
    {description}
  </p>

  <a
    href="/capacitaciones"
    class="text-indigo-500 inline-flex items-center mt-5 cursor-pointer"
    >Más información
    <ArrowRight />
  </a>
</div>
