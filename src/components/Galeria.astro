---
import "photoswipe/style.css";
---

<section class="max-w-6xl px-10 mx-auto flex flex-col gap-4 py-10">
  <h1 class="text-gray-700 font-bold text-3xl text-balance">
    Galeria de Fotos
  </h1>
  <div class="grid grid-cols-2 md:grid-cols-6 gap-2 mx-auto py-5" id="gallery">
    {
      Array.from({ length: 15 }).map((_, i) => (
        <a
          class="rounded-2xl shadow-xl shadow-[#032b30] duration-700 hover:shadow-[#0d7378] hover:scale-105 transition-all overflow-hidden hover:ease-in-out"
          href={`/images/img-${i + 1}.png`}
          data-pswp-width="700"
          data-pswp-height="622"
          target="_blank"
        >
          <img src={`/images/img-${i + 1}.png`} loading="lazy" alt="" />
        </a>
      ))
    }
  </div>
</section>

<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    showHideAnimationType: "fade",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
